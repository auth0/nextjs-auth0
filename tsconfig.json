{
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
